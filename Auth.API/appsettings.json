{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "AuthTokenSettings": {
      "Issuer": "http://localhost:5000/",
      "Audience": "http://localhost:5001/",
      "LifeTimeInSeconds": 300
    },
    "RefreshTokenSettings": {
      "Length": 64,
      "LifeTimeInMinutes": 60
    },
    "RepositorySettings": {
      "DatabaseName": "auth_database"
    }
  }
}
